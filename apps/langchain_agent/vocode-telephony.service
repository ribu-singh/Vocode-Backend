[Unit]
Description=Vocode Telephony Server for Twilio Integration
After=network.target redis.service

[Service]
Type=simple
User=YOUR_USERNAME
WorkingDirectory=/home/YOUR_USERNAME/vocode-core/apps/langchain_agent
Environment="PATH=/home/YOUR_USERNAME/.local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
EnvironmentFile=/etc/vocode/telephony.env
ExecStart=/home/YOUR_USERNAME/.local/bin/poetry run uvicorn telephony_app:app --host 0.0.0.0 --port 3001
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

